DESCRIPTION="Enlightenment E16 applets"
HOMEPAGE="http://enlightenment.org/"
SRC_URI="mirror://sourceforge/enlightenment/${P}.tar.gz"
PATCH_URI="
	0.12-exeext.patch
	0.11-no-undefined.patch
	0.12-vpath.patch
"

PKG_NAMES="${PN} libepplet3 libepplet-devel"
epplets_CONTENTS="usr/bin/*.exe usr/share/"
libepplet3_CONTENTS="usr/bin/*-3.dll"
libepplet_devel_CONTENTS="usr/include/ usr/lib/"

CYGCONF_ARGS="
	--enable-glx
	--disable-esd
	--disable-cdaudio
	--disable-static
	LIBGTOP_CONFIG=no
"
